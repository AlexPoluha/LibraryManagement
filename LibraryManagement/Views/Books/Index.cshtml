@model IEnumerable<LibraryManagement.Models.Book>

@{
    ViewData["Title"] = "Книги";
}

<div class="container mt-5">
    <div class="card shadow">
        <div class="card-header bg-primary text-white text-center">
            <h3>Книги</h3>
        </div>
        <div class="card-body">
            <p>
                <a asp-action="Create" class="btn btn-success">
                    <i class="fas fa-plus"></i> Добавить новую книгу
                </a>
            </p>
            <table class="table table-striped table-hover">
                <thead class="thead-light">
                    <tr>
                        <th>Название книги</th>
                        <th>Автор</th>
                        <th>Действия</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.Title)</td>
                                <td>@Html.DisplayFor(modelItem => item.Author.Name)</td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.BookId" class="btn btn-warning btn-sm">
                                        <i class="fas fa-edit"></i> Редактировать
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.BookId" class="btn btn-danger btn-sm">
                                        <i class="fas fa-trash"></i> Удалить
                                    </a>
                                </td>
                            </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
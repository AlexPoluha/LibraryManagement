@model IEnumerable<LibraryManagement.Models.Character>

@{
    ViewData["Title"] = "Персонажи";
}

<div class="container mt-5">
    <div class="card shadow">
        <div class="card-header bg-primary text-white text-center">
            <h3>Персонажи</h3>
        </div>
        <div class="card-body">
            <div class="text-center mt-4">
                <a asp-action="Create" class="btn btn-success">
                    <i class="fas fa-plus"></i> Добавить нового персонажа
                </a>
            </div>
            <table class="table table-striped table-hover">
                <thead class="thead-light">
                    <tr>
                        <th>Имя</th>
                        <th>Описание</th>
                        <th>Книга</th>
                        <th>Действия</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var character in Model)
                    {
                        <tr>
                            <td>@character.Name</td>
                            <td>@character.Description</td>
                            <td>@character.Book?.Title</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@character.CharacterId" class="btn btn-warning btn-sm">
                                    <i class="fas fa-edit"></i> Редактировать
                                </a>
                                <a asp-action="Delete" asp-route-id="@character.CharacterId" class="btn btn-danger btn-sm">
                                    <i class="fas fa-trash"></i> Удалить
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
@model LibraryManagement.Models.Character

@{
    ViewData["Title"] = "Создание персонажа";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-primary text-white text-center">
                    <h3>Создание персонажа</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        <div class="form-group mb-3">
                            <label asp-for="Name" class="form-label">Имя персонажа</label>
                            <input asp-for="Name" class="form-control" placeholder="Введите имя персонажа" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Description" class="form-label">Описание</label>
                            <input asp-for="Description" class="form-control" placeholder="Введите описание персонажа" />
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="BookId" class="form-label">Книга</label>
                            <select asp-for="BookId" class="form-control" asp-items="ViewBag.BookId">
                                <option value="">Выберите книгу</option>
                            </select>
                            <span asp-validation-for="BookId" class="text-danger"></span>
                        </div>
                        <div class="form-group text-center">
                            <button type="submit" class="btn btn-success btn-lg">
                                <i class="fas fa-save"></i> Создать
                            </button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left"></i> Назад к списку
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>